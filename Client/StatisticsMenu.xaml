<Window x:Class="Client.StatisticsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Trivia - StaticsticsMenu" Height="500" Width="800"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Grid Background="DarkBlue">
        <Image Source="Image/cute_kitten.jpeg" Height="400"/>
        <Frame Name="frame" NavigationUIVisibility="Hidden"/>
        <Border CornerRadius="10 10 0 0" Background="Blue" VerticalAlignment="Top" Height="35">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Personal Statistics" Style="{StaticResource NavbarButton}" Width="200" Click="showStatistics"/>
                <Button Content="High scores Hall" Style="{StaticResource NavbarButton}" Click="showHighScores"/>
            </StackPanel>
        </Border>

        <Button Content="Back" Margin="692,455,10,10" Click="back"/>
    </Grid>
</Window>
